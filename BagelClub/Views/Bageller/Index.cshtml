@model IEnumerable<BagelClub.Models.Bageller>

@{
	ViewBag.Title = "Index";
}

<p>@Html.ActionLink("Create New", "Edit", new { id = 0 })</p>
@if (TempData["message"] != null) {
<p class="error">@TempData["message"]</p>
}
<table class="super">
	<caption>Bagellers</caption>
	<thead>
		<tr>
			<th></th>
			<th>
				Name
			</th>
			<th>
				Email
			</th>
			<th>
				NextPurchaseDate
			</th>
		</tr>
	</thead>
	<tbody>
	@foreach (var item in Model) {
		<tr>
			<td>
				@Html.ActionLink("Edit", "Edit", new { id=item.BagellerId })
			</td>
			<td>@item.Name</td>
			<td>@item.Email</td>
			<td>@item.NextPurchaseDate.ToShortDateString()</td>
		</tr>
	}
	</tbody>
</table>

<div class="textcenter">
<a href="@Url.Action("SkipWeek", new { id = 1})" class="btn">Skip this week</a>
<a href="@Url.Action("SkipWeek", new { id = 0})" class="btn">Reset Old Dates</a>
</div>