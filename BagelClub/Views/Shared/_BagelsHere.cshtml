@using (Html.BeginForm("BagelsHere", "Home", FormMethod.Post, new { id = "bagel-here-form", @class = "widget group no-print" })) {
	<button type="button" class="btn-here btn">Bagels are Here!</button>
	<fieldset class="super">
		<label for="bagel-location">They&rsquo;re located:</label>
		<input type="text" class="txt required" name="location" id="bagel-location" placeholder="e.g. 'in the .NET area'" />
		<button type="reset" class="btn-cancel btn">Cancel</button>
		<button type="submit" class="btn-submit btn">Run Tell Dat</button>
	</fieldset>
}